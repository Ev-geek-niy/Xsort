{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "Serilog": {
        "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
        "MinimumLevel": {
            "Default": "Debug"
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "Seq",
                "Args": {
                    "ServerUrl": "YOUR_SEQ_URL",
                    "ApiKey": "YOUR_API_KEY",
                    "MinimumLevel": "Trace",
                    "LevelOverride": {
                        "Microsoft": "Warning"
                    }
                }
            }
        ]
    }
}