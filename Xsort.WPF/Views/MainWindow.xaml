<Window x:Class="Xsort.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xsort.WPF"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:vm="clr-namespace:Xsort.WPF.ViewModels"
        mc:Ignorable="d"
        FontSize="18"
        Title="MainWindow" Height="250" Width="600">
    
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <tb:TaskbarIcon
            IconSource="\Assets\AppIcon.ico"
            Visibility="Visible">
        
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Click="HandleOpen_OnClick"/>
                    <MenuItem Header="Close" Click="HandleClose_OnClick"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <TextBlock Grid.Column="1"
                   Grid.Row="0"
                   Text="Полный путь до папки:"/>
        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   Text="{Binding FolderPath}"/>

        <Button Grid.Column="0"
                Grid.Row="0"
                Content="Выбрать путь до папки"
                Command="{Binding SetFolderPathCommand}"/>

        <!-- <Button Grid.Column="0" -->
        <!--         Grid.Row="1" -->
        <!--         Content="Сортировать" -->
        <!--         Command="{Binding SortFileInFolderCommand}"/> -->
        <CheckBox Grid.Column="0"
                  Grid.Row="2"
                  Content="Автозапуск"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding IsAutoStartUp}"/>
        <CheckBox Content="Minimized"
                  Grid.Column="0"
                  Grid.Row="3"
                  VerticalContentAlignment="Center"
                  IsChecked="{Binding IsMinimized}"
                  >
        </CheckBox>
    </Grid>
</Window>
